{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}



<main class="content" role="main">
  <article class="{{post_class}}">

    <header  class="page-header">
      <div   class="page-header-inner">
        <div   class="page-header-wrap">
          <div class="page-meta">
            <time class="page-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
            <span class="page-descriptive">Written by</span>
            <a    class="page-author" href="/author/{{author.slug}}" rel="author">{{author.name}}</a>
            <span class="page-tags">{{tags prefix=" on "}}</span>
          </div>
          <h1>{{{title}}}</h1>
        </div>
      </div>
    </header>

    {{#if image}}
    <div class="post-image" style="background-image: url({{image}})"></div>
    {{else}}
    <div class="ui-divider"></div>
    {{/if}}

    <section class="post-content">
      <div class="post-content-wrap">
        {{content}}
      </div>
    </section>

    <footer class="post-footer">
      {{#author}}
      <div class="post-author">
        <div class="post-author-wrap">
          {{#if image}}
          <a class="post-author-image" href="{{url}}" style="background-image: url({{image}})">
            <span class="hidden">{{name}}'s Picture</span>
          </a>
          {{/if}}

          <section class="post-author-content">
            <h4><a href="{{url}}">{{name}}</a></h4>
            <div class="author-meta">
              {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
              {{#if website}}<span class="author-link icon-link"><a href="{{website}}">Twitter</a></span>{{/if}}
            </div>
            {{#if bio}}
                <p>{{bio}}</p>
            {{else}}
                <p>Read <a href="{{url}}">more posts</a> by this author.</p>
            {{/if}}

          </section>
        </div>
      </div>
      {{/author}}

      <section class="post-comments">
        {{!-- <div   class="post-comments-wrap"> --}}
          <h4 class="show-comments"><a href="#">Read Comments</a></h4>
          <div class="post-comments-wrap">
            <div id="disqus_thread" class="/ post-wrap"></div>
          </div>
          <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
        {{!-- </div> --}}
      </section>

      <section class="post-share">
        {{!-- <h4>Share this post</h4> --}}
        <a class="fa fa-twitter" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
          onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
          <span class="hidden">Twitter</span>
        </a>
        <a class="fa fa-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
          onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
          <span class="hidden">Facebook</span>
        </a>
        <a class="fa fa-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
           onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
          <span class="hidden">Google+</span>
        </a>
      </section>

    </footer>

  </article>
</main>

<aside class="readNext">
    {{#next_post}}
{{!--     <a class="read-next-story {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
        <section class="post">
            <h2>{{title}}</h2>
            <p>{{excerpt words="19"}}&hellip;</p>
        </section>
    </a> --}}
    {{/next_post}}
  {{#prev_post}}
  <a class="readNext-link" href="{{url}}">
    <section class="readNext-content">
      {{!-- <div class="readNext-image" {{#if image}}style="background-image: url({{image}}){{else}}no-cover{{/if}}"></div> --}}
      <span class="readNext-hint">Read Next Article</span>
      <h4 class="readNext-title">{{title}}</h4>
      <span class="readNext-icon">&rarr;</span>
    </section>
  </a>
  {{/prev_post}}
</aside>

{{/post}}


