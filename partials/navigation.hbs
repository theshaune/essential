<div class="site-navigation">
  <div class="site-navigation-wrap">
    <a class="site-navigation-brand" id="logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}"></a>
    <a  class="site-navigation-burger" href="#">
      <span></span>
    </a>
  </div>
</div>

<nav class="site-menu" {{#if @blog.image}}style="background-image: url({{@blog.image}}){{/if}}">
  <div class="site-menu-wrap">
    <ul class="site-menu-ul">
      <li>
        <h4>{{@blog.description}}</h4>
      {{#foreach navigation}}
      <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}" role="presentation"><a href="{{url absolute="true"}}">{{label}}</a></li>
      {{/foreach}}
    </ul>
  </div>
</nav>




