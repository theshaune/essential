{{! The main content area on the homepage }}
<main class="content" role="main">

  <header  class="page-header">
    <div   class="page-header-inner">
      <div   class="page-header-wrap">
        <div class="page-meta">
          <span class="page-descriptive">{{tag.description}}</span>
          <span class="page-descriptive">{{plural pagination.total empty='No posts' singular='% post' plural='% posts'}}</span>
        </div>
        <h1>{{tag.name}}</h1>
      </div>
    </div>
  </header>

  {{#if tag.image}}
  <div class="page-image" style="background-image: url({{tag.image}})"></div>
  {{else}}
  <div class="ui-divider"></div>
  {{/if}}

  {{!-- <section class="post-content {{#unless image}}page-no-image{{/unless}}"> --}}

  {{! The tag below includes the post loop - partials/loop.hbs }}
  {{> "loop"}}

</main>
